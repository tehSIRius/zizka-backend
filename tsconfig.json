{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "checkJs": true,
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["./src/**/*"]
}
