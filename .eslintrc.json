{
    "env": {
        "commonjs": true,
        "es2020": true,
        "jest": true
    },
    "extends": [
        "prettier",
        "eslint:recommended"
    ],
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "trailingComma": "es5",
                "useTabs": true,
                "semi": true,
                "quoteProps": "consistent",
                "arrowParens": "always",
                "endOfLine": "auto"
            }
        ],
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}